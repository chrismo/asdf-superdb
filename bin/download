#!/usr/bin/env bash

set -euo pipefail

if [[ "${ASDF_SUPERDB_DEBUG:-false}" == "true" ]]; then set -x; fi

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")

# shellcheck source=../lib/utils.bash
source "${plugin_dir}/lib/utils.bash"

# ref type is build-only
if [ "$ASDF_INSTALL_TYPE" == "version" ]; then
	mkdir -p "$ASDF_DOWNLOAD_PATH"

	# file is a standalone binary, not an archive
	release_file="$ASDF_DOWNLOAD_PATH/$TOOL_NAME-$ASDF_INSTALL_VERSION"

	# Download the binary to the download directory, if one exists
	if download_release "$ASDF_INSTALL_VERSION" "$release_file"; then
		echo "Binary download and verification completed successfully"
	else
		echo "Binary download or verification failed, installation will build from source"
		# Remove any partial/failed download
		rm -f "$release_file"
	fi
fi
